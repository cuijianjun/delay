.choose-city{
    background: #f1f1f1;
    color: #999;
    height: 40px;
    line-height: 40px;
    font-size: 16px;
    padding-left: 10px;
}
.choose-city .name {
    color: #666;
}

.search-letter{
    position: fixed;
    top: 50px;
    right: 0;
    width: 20px;
    background: #fff;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    color: skyblue;
    z-index: 1
}

.history-city,
.hot-city{
    margin-bottom: 10px;
}

.history-city .title,
.hot-city .title
{
  color: #999;
  font-size: 13px;
  display: block;
  padding: 10px 0 5px 10px;
}
.history-city .container text,
.hot-city .container text{
    display: inline-block;
    height: 30px;
    line-height: 30px;
    text-align: center;
    width: 28%;
    color: #666;
    border: 1px solid #eee;
    border-radius:2px;
    margin: 10px 0 0 10px;
}

.selection{
    display: flex;
    flex-direction: column;
    width: 100%
}

.item-letter{
    display: flex;
    background: #f8f8f8;
    padding-left: 10px;
    height: 30px;
    line-height: 30px;
}
.item-city{
    height: 40px;
    line-height: 40px;
    display: flex;
    padding-left: 10px;
    border-bottom: 1px solid #f8f8f8;
}