page{
  background: #ececec
}
.menu-item{
  display: flex;
  flex-direction: row;
  background: #fff;
  border-bottom: 1rpx solid #ececec
}

.icon{
  width: 48rpx;
  height: 48rpx;
  margin: 16rpx;
  align-content: center;
  align-self: center
}

.menu-content{
  flex: 1;
  display: flex;
  flex-direction: row;
  align-content: center;
  padding-left: 24rpx;
  align-self: center
}

.title{
  font-size: 14px;
  align-content: center;
  align-self: center;
  margin-right: 36rpx;
}
.sub-title{
  display: flex;
  flex: 1;
  align-content: center;
  align-self: center;
}
.right{
  display: flex;
  margin-right: 24rpx; 
}
.right-image{
  width: 48rpx;
  height: 48rpx;
  align-content: center;
  align-self: center
}
.tip{
  display: flex;
  align-content: center;
  align-self: center;
  justify-content: center;
  background: #ff0000;
  border-radius: 50%;
  width: 36rpx;
  height: 36rpx;
  font-size: 14px;
  margin-right: 24rpx;
  color: #fff
}
.header{
  height: 36rpx;
  display: flex;
  flex: 1;
  flex-direction: row;
  align-content: center;
  align-items: center;
  background: #ececec;
  font-size: 12px;
  padding-left: 36rpx;
}