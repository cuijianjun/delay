/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 


.menu-item{
  display: flex;
  flex-direction: row;
  background: #fff;
  border-bottom: 1rpx solid #ececec;
}

.icon{
  width: 48rpx;
  height: 48rpx;
  margin: 16rpx;
}

.menu-content{
  flex: 1;
  display: flex;
  flex-direction: column;
  align-content: center;
  align-self: center;
  padding-left: 24rpx;
}

.title{
  font-size:14px;
}

.header{
  height: 36rpx;
  display: flex;
  flex: 1;
  flex-direction: row;
  align-content: center;
  align-items: center;
  background: #ececec;
  font-size: 12px;
  padding-left: 36rpx;
}